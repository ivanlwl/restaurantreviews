
<h1>Listing ideas</h1>

<% @restaurants.in_groups_of(3) do |group| %>
  <div class="row">
    <% group.compact.each do |restaurant| %>
      <div class="col-md-4">
        <h4><%= link_to restaurant.name, restaurant %></h4>
        <%= restaurant.description %>
      </div>
    <% end %>
  </div>
<% end %>
